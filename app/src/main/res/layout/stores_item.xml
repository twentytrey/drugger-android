<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="1dp"
    android:layout_margin="1dp"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/lightWhite"
        android:padding="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:id="@+id/catalog_image"
            android:src="@drawable/ic8_store_setting" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/store_item_name"
                android:fontFamily="@font/brandon_grotesque_black"
                android:textSize="18sp"
                android:layout_gravity="start"
                android:gravity="start"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/store_item_description"
                android:textSize="14sp"
                android:layout_gravity="start"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"/>

        </LinearLayout>

<!--        <ImageView-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:background="@drawable/circlebackgroundmaterialblue"-->
<!--            android:scaleType="centerInside"-->
<!--            android:src="@drawable/ic_round_store_24" />-->

    </LinearLayout>

</androidx.cardview.widget.CardView>